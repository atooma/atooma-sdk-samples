<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atooma.plugin.sphero"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application android:allowBackup="true" >
        <service
            android:name="com.atooma.AtoomaPluginService"
            android:process=":remote" />

        <receiver android:name="com.atooma.plugin.sphero.SPHEROReceiver" >
            <intent-filter>
                <action android:name="com.atooma.plugin.REGISTRATION" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.atooma.plugin.sphero.SPHERORegister"
            android:process=":remote" />
    </application>

</manifest>